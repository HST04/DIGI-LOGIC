{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Circuit Graph",
  "type": "object",
  "required": ["components","nets"],
  "properties": {
    "components": {
      "type": "object",
      "additionalProperties": {
        "type": "object",
        "required": ["id","type"],
        "properties": {
          "id":{"type":"string"},
          "type":{"type":"string"},
          "x":{"type":"number"},
          "y":{"type":"number"},
          "meta":{"type":"object"}
        }
      }
    },
    "nets": {
      "type": "object",
      "additionalProperties": {
        "type":"object",
        "required":["id","nodes"],
        "properties":{
          "id":{"type":"string"},
          "nodes":{
            "type":"array",
            "items":{
              "type":"object",
              "required":["compId","pin"],
              "properties":{
                "compId":{"type":"string"},
                "pin":{"type":"string"}
              }
            }
          }
        }
      }
    }
  }
}
